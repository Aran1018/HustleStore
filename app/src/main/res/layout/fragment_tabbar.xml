<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <include layout="@layout/item_underline" />

        <LinearLayout
            android:id="@+id/ll_tabbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btim_main"
                    android:layout_width="30dp"

                    android:layout_height="30dp"
                    android:background="@drawable/yi_select" />

                <TextView
                    android:id="@+id/tv_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主页"
                    android:textSize="@dimen/bottom_text_size_value" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_list"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btim_find"
                    android:layout_width="30dp"

                    android:layout_height="30dp"
                    android:background="@drawable/find_no_select" />

                <TextView
                    android:id="@+id/tv_list"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="发现"
                    android:textSize="@dimen/bottom_text_size_value" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mine"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btim_mine"
                    android:layout_width="30dp"

                    android:layout_height="30dp"
                    android:background="@drawable/mine_no_selected" />

                <TextView
                    android:id="@+id/tv_mine"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="@dimen/bottom_text_size_value" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
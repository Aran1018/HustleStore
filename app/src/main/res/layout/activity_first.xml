<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/cardview_light_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_first_background"
        android:background="@drawable/bg_login"
        android:scaleType="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">


    </LinearLayout>
    <com.triplebro.aran.hustlestore.widget.RoundImageView
        android:id="@+id/ri_user_login"
        android:layout_alignBottom="@+id/ll_first_background"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bg_user_img"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <ImageView
        android:layout_alignBottom="@+id/ll_first_background"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray0"
        android:gravity="center"
        android:paddingTop="@dimen/title_margin_right"
        android:paddingBottom="@dimen/title_margin_right"
        android:paddingRight="@dimen/title_margin_top"
        android:paddingLeft="@dimen/title_margin_top"
        android:src="@drawable/logo_text_white"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:paddingTop="30dp"
            android:paddingRight="@dimen/title_margin_right"
            android:paddingLeft="@dimen/title_margin_right"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20dp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="35dp"
                android:text="@string/login_said"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_confirmbt"
                android:layout_width="match_parent"
                android:scaleType="center"
                android:layout_height="120dp" >

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/gray0"
                    android:text="登 录"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text_margin_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="@dimen/title_margin_right"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <Button
                android:id="@+id/bt_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/bt_down"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_login_background"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">


        </LinearLayout>
        <ImageView
            android:id="@+id/im_login_imgtext"
            android:src="@drawable/logo_text_black"
            android:layout_alignBottom="@id/ll_login_background"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/title_margin_right"
            android:paddingBottom="@dimen/title_margin_right"
            android:paddingRight="@dimen/title_margin_top"
            android:paddingLeft="@dimen/title_margin_top"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <android.support.v4.view.ViewPager
            android:layout_marginTop="350dp"
            android:id="@+id/vp_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>

    </RelativeLayout>

</RelativeLayout>

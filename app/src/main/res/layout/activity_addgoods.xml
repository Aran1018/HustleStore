<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="主图:"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/goods_example" />

            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="副选图:"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_sec1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/goods_example" />

                <ImageView
                    android:id="@+id/iv_sec2"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/goods_example" />

                <ImageView
                    android:id="@+id/iv_sec3"

                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/goods_example" />

                <ImageView
                    android:id="@+id/iv_sec4"

                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/goods_example" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="货号:"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_goodsId"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签（新品/二手）:"

                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_goodsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg_dark" />



            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="入手价:"

                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_goodsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_bg_dark" />

            <Button
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:textColor="#fff"
                android:id="@+id/bt_submit_insert"
                android:text="加入商品"
                android:background="@drawable/bt_black_corners"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
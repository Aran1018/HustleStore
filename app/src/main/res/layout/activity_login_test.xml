<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="@dimen/title_margin_right">

        <Button
            android:id="@+id/bt_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_down" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_login_background"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:scaleType="center">


    </LinearLayout>

    <ImageView
        android:id="@+id/im_login_imgtext"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@id/ll_login_background"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="@dimen/title_margin_right"
        android:paddingLeft="@dimen/title_margin_top"
        android:paddingRight="@dimen/title_margin_top"
        android:paddingTop="@dimen/title_margin_right"
        android:src="@drawable/logo_text_black"
        android:textColor="@color/black" />


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_login"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="300dp">




    </android.support.v4.view.ViewPager>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="@dimen/title_margin10dp">

        <ImageView
            android:id="@+id/iv_goodsImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_img" />

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/title_text_margin20dp"
            android:layout_toEndOf="@id/iv_goodsImg"

            android:maxLines="2"
            android:text="这是商品的名称"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_deal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_marginLeft="@dimen/title_text_margin20dp"
            android:layout_toEndOf="@id/iv_goodsImg"
            android:text="2019.4.11   13:30"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_deal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:layout_marginRight="20dp"
            android:text="￥1899"
            android:textColor="#000000"
            android:textStyle="bold" />


    </RelativeLayout>


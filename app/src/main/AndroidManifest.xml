<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.triplebro.aran.hustlestore">
<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>




    <application
        android:name=".activites.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:launchMode="singleTask"
            android:name=".activites.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.AddGoodsActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.SendNewsActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.LoginActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:launchMode="singleTask"
            android:name=".activites.TrafficUserShowActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.MycardActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.DetailsActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.SetupActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:launchMode="singleTask"
            android:name=".activites.ChangeDataActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activites.RegisterActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <activity
            android:launchMode="singleTask"
            android:name=".activites.FirstActivity"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.triplebro.aran.hustlestore"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service android:name=".services.CommunicationService" />
    </application>

</manifest>